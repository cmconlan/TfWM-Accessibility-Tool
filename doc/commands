sudo nano /etc/yum.repos.d/CentOS-Base.repo
## Add exclude=postgresql*
sudo yum install https://download.postgresql.org/pub/repos/yum/reporpms/EL-7-x86_64/pgdg-redhat-repo-latest.noarch.rpm
sudo yum install postgresql10-server postgresql-devel
sudo /usr/pgsql-10/bin/postgresql-10-setup initdb

## Authorisation
sudo -i -u postgres 
sudo nano var/lib/pgsql/10/data/pg_hba.conf
## Change 3x to 'trust'

sudo systemctl start postgresql-10
sudo systemctl enable postgresql-10
sudo -i -u postgres 
createdb tfwm
psql 
\connect tfwm

## PostGIS
sudo yum -y install epel-release
sudo yum install postgis24_10   



## Python requirements
sudo yum install python3 python3-devel
sudo PATH=$PATH:/usr/pgsql-10/bin/ pip3 install -r requirements.txt

## Clone the repository
## Set the ROOT_FOLDER repo and other credentials

sudo systemctl restart postgresql10.service


# OTP
java -Xmx16G -jar ./otp-1.4.0-shaded.jar --build . --inMemory